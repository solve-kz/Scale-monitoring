{
  "Api": {
    "Port": 5000, // Порт для API
    "ServiceName": "ScalemonService"  // Имя сервиса для API
  },
  "Authentication": {   
    "Basic": {
      "Username": "scalemon_api", // Имя пользователя для базовой аутентификации
      "Password": "секрет" // Пароль для базовой аутентификации
    }
  },
    "Logging": {
      "Level": {
        "Default": "Information", // Уровень логирования по умолчанию
        "Detailed": "Debug" // Уровень детализации для подробных логов
      },
      "filePath": {
        "MainLogPath": "C:\\Logs\\main.log", // Путь для основного лога
        "DetailedLogPath": "C:\\Logs\\detailed.log" // Путь для детального лога
      }
    },

    "DatabaseSettings": {
      "MaxRetryQueueSize": 100, // Максимальный размер очереди на повторную запись
