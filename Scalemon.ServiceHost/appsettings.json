      "ConnectionString": "Server=.\\SQLEXPRESS;Database=WeighingDB;Trusted_Connection=True;",
      "TableName": "Weighings" // Имя таблицы для записи
    },

  "ScaleSettings": {
    "PortName": "COM2", // COM-порт весов
    "PollingIntervalMs": 200, // Интервал опроса в мс
    "StableThreshold": 3, // Число последовательных стабильных чтений
    "UnstableThreshold": 3, // Число последовательных нестабильных чтений
    
  },

  "SystemSettings": {
"   MinWeight": 5.0, // Минимальный вес для записи
    "HystWeight": 0.1, // Порог гистерезиса
    "SemaphoreTimeMs": 4000 // Таймаут ожидания семафора FSM в мс
